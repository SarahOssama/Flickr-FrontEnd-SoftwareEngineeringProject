{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style":"off",
        "react/jsx-filename-extension": [0],
        // suppress errors for missing 'import React' in files
        "react/react-in-jsx-scope": "off",
        "import/no-unresolved":"off",
        "no-unused-vars":"warn"
    }
}
